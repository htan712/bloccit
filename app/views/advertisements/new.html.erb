<h1>Create New Advertisements</h1>
<div class="row">
  <%= form_for @advertisement do |f| %>
    <div class="form group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Ad title here" %>
    </div>
    <div class="form group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control', placeholder: "Input Price" %>
    </div>
    <div class="form group">
      <%= f.label :copy %>
      <%= f.text_field :copy, class: 'form-control', placeholder: "Brief Info here" %>
    </div>
    <div class="form group">
      <%= f.submit "Create", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
